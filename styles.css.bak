body {
    margin: 0;
    font-family: Arial, sans-serif;
    background: #0b1e33;
    color: #fff;
}

header {
    background: #0d2b4d;
    padding: 15px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

header h1 {
    margin: 0;
    color: #4fa3ff;
}

nav a {
    color: #fff;
    text-decoration: none;
    margin-left: 15px;
    font-weight: bold;
}

nav a:hover {
    color: #4fa3ff;
}

.container {
    padding: 30px;
    max-width: 900px;
    margin: auto;
    background-color: #10263e;
    margin-top: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px #000;
}
